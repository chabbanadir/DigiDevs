---
import Layout from '../layouts/Layout.astro';
import { digitalizationQuiz } from "../Data/digitalizationQuiz.ts";
import "../styles/global.css";
---

<Layout title="Welcome to Astro." className='bg-dark-gray'  quiz={digitalizationQuiz}>

    <section class="bg-primary text-white py-12">
        <div class="container mx-auto">
          <div class="swiper-container">
            <div class="swiper-wrapper">
              <div class="swiper-slide text-center">
                <h2 class="text-3xl font-bold">Digitalisation</h2>
                <p class="text-lg mt-4">Améliorez vos processus grâce à nos solutions de digitalisation.</p>
              </div>
              <div class="swiper-slide text-center">
                <h2 class="text-3xl font-bold">Intégration ERP</h2>
                <p class="text-lg mt-4">Centralisez vos données et optimisez votre gestion.</p>
              </div>
              <div class="swiper-slide text-center">
                <h2 class="text-3xl font-bold">SEO Audit</h2>
                <p class="text-lg mt-4">Boostez votre visibilité avec nos audits SEO personnalisés.</p>
              </div>
            </div>
            <div class="swiper-pagination"></div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
          </div>
        </div>
      </section>
      
    <div class="bg-primary">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
                <path
                fill="#1DA1F2"
                fill-opacity="1"
                d="M0,256L60,224C120,192,240,128,360,133.3C480,139,600,213,720,234.7C840,256,960,224,1080,202.7C1200,181,1320,171,1380,165.3L1440,160L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"
                ></path>
            </svg>
    </div>

    
</Layout>
<script src="/src/scripts/swiper.js"></script>
