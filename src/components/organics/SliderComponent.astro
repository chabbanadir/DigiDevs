---
import Btn from "../atoms/Btn.astro";
const slides = Astro.props.slides;
---
<section class="bg-accent text-neutral relative">
    <div class="swiper-container bg-accent h-screen relative mx-auto pb-16 sm:pb-24 md:pb-32">
      <div class="swiper-wrapper">
        {slides.map((slide: { img: any; href: string; title: string; description: string; btnTitle: string; btnclassName: string; }) => (
          <div class="swiper-slide relative flex items-center justify-center">
            <!-- Background image with blur -->
            <div
              class="absolute z-0 h-screen inset-0"
              style={`background-image: url('${slide.img}'); background-size: cover; background-position: center;`}
            ></div>
            <!-- Transparent Overlay for Opacity Effect -->
            <div class="absolute inset-0 h-screen bg-primary/75 z-10"></div> <!-- Semi-transparent black -->
            <!-- Content -->
            <div class="relative z-20 p-10 flex items-center justify-center flex-col h-full">
              <h2 class="text-4xl font-bold text-accent">{slide.title}</h2>
              <p class="text-xl mt-12 text-center text-neutral px-20">{slide.description}</p>
              <a href={slide.href} class={`${slide.btnclassName} mt-4 z-30`} >{slide.btnTitle}</a>
            </div>
          </div>
        ))}
      </div>
      <div class="swiper-pagination z-30"></div>
      <div class="swiper-button-next z-30"></div>
      <div class="swiper-button-prev z-30"></div>
    </div>
    <!-- Wave SVG at the bottom -->
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" class="absolute -bottom-1 w-full z-10">
      <path fill="#1DA1F2" fill-opacity="1" d="M0,288L48,245.3C96,203,192,117,288,101.3C384,85,480,139,576,181.3C672,224,768,256,864,261.3C960,267,1056,245,1152,218.7C1248,192,1344,160,1392,144L1440,128L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
    </svg>
  </section>
  