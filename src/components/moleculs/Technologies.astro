---
import { Icon } from 'astro-icon/components'

interface Technology {
  name: string;
  icon: string;
  description: string;
   
}

const { technologies ,title}= Astro.props;
---
<section class="sm:p-12 bg-dark-gray text-neutral">
  <h2 class="text-3xl sm:text-4xl font-bold text-accent mb-8 text-center">{title}</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 place-items-center">
    {technologies.map((tech: { icon: any; name: unknown; description: unknown; }) => (
      <div class="group [perspective:1000px] w-full flex justify-center">
        <div class="relative h-48 w-full max-w-xs [transform-style:preserve-3d] transition-transform duration-500 group-hover:[transform:rotateY(180deg)]">
          
          <!-- Face Avant -->
          <div class="absolute inset-0 bg-neutral p-4 rounded-lg shadow-md flex flex-col items-center justify-center [backface-visibility:hidden]">
            <Icon name={tech.icon} class="text-6xl text-accent mb-2" />
            <h3 class="text-xl font-semibold text-accent">{tech.name}</h3>
          </div>
          
          <!-- Face ArriÃ¨re -->
          <div class="absolute inset-0 bg-accent p-4 rounded-lg shadow-md flex items-center justify-center text-neutral [transform:rotateY(180deg)] [backface-visibility:hidden]">
            <p class="text-base text-center">{tech.description}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>