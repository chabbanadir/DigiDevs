---
import { Icon } from 'astro-icon/components';

// Props
const { strengths, title, subtitle } = Astro.props;
---

<section class="strengths-grid p-12 sm:px-24 bg-primary">
  <h2 class="text-3xl font-bold mb-4 text-center text-accent">{title}</h2>
  <p class="mb-8 text-light-gray text-center">{subtitle}</p>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {strengths.map((strength: { icon: any; title: unknown; description: unknown; }) => (
      <div class="p-6 rounded-lg shadow-md bg-white flex items-start space-x-4 group transition-transform transform hover:scale-105 hover:bg-accent duration-300">
        <span class="text-3xl text-accent transition-colors duration-300 group-hover:text-neutral">
          <Icon name={strength.icon} />
        </span>
        <div>
          <h3 class="text-xl font-semibold text-dark-gray transition-colors duration-300 group-hover:text-neutral">{strength.title}</h3>
          <p class="text-gray-600 transition-colors duration-300 group-hover:text-neutral">{strength.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>
