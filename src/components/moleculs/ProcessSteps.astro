---
import { Icon } from 'astro-icon/components';

// Props
const { steps, title, subtitle } = Astro.props;
---
  
<section class="process-steps p-12 sm:px-24 bg-primary">
  <h2 class="text-3xl font-bold mb-4 text-center text-accent">{title}</h2>
  <p class="mb-8 text-light-gray text-center">{subtitle}</p>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {steps.map((step: { icon: any; title: unknown; description: unknown; }, index: number) => (
      <div class="relative p-6 rounded-lg shadow-md bg-white flex items-start space-x-4 hover:bg-accent transition-colors duration-300 min-h-[200px] group">
        <div class="absolute top-2 right-2 text-xl font-bold text-accent group-hover:text-neutral transition-colors duration-300">
          {index + 1}
        </div>
        <span class="text-3xl text-accent transition-colors duration-300 group-hover:text-neutral">
          <Icon name={step.icon} />
        </span>
        <div>
          <h3 class="text-xl font-semibold text-dark-gray transition-colors duration-300 group-hover:text-neutral">{step.title}</h3>
          <p class="text-gray-600 transition-colors duration-300 group-hover:text-neutral">{step.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>